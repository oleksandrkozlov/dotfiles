# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        output_format = "i3bar"
        colors = true
        color_good = "#50FA7B"
        color_degraded = "#F1FA8C"
        color_bad = "#FF5555"
}

order += "tztime holder__nord_vpn"
order += "wireless _first_"
order += "ethernet _first_"
order += "disk /"
order += "disk /home/olkozlo/Work/workspace"
order += "load"
order += "memory"
order += "tztime local"

wireless _first_ {
        format_up = "Wi-Fi: (%quality at %essid, %bitrate)"
        format_down = "Wi-Fi: OFF"
}

ethernet _first_ {
        format_up = "Eth: (%speed)"
        format_down = "Eth: OFF"
}

battery all {
        format = "%status %percentage %remaining"
}

disk "/" {
        format = "root: %avail/%total"
}


disk "/home/olkozlo/Work/workspace" {
        format = "workspace: %avail/%total"
}

load {
        format = "%1min"
}

memory {
        format = "%used/%available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

tztime holder__nord_vpn {
        format = "holder__nord_vpn"
 }

